{
  "name": "ventai-app",
  "version": "2.0.0",
  "description": "VentAI - Professional HVAC Calculation and Design Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend/src && python main.py",
    "build": "cd frontend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && python -m pytest",
    "docker:dev": "docker-compose -f deployment/docker/docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f deployment/docker/docker-compose.prod.yml up -d",
    "setup": "../.workspace/workflow-manager.sh setup complete",
    "lint:backend": "cd backend/src && flake8 . && black --check . && isort --check .",
    "format:backend": "cd backend/src && black . && isort ."
  },
  "keywords": [
    "hvac",
    "ventilation",
    "ai",
    "calculations",
    "engineering"
  ],
  "author": "VentAI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}

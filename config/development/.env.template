# ====================================
# Vent.AI Development Environment Variables
# ====================================
# Copy this file to .env and fill in your values
# This file contains all environment variables used by the DevContainer

# ====================================
# 🔧 Git Configuration (Required)
# ====================================
# These variables will automatically configure Git in the DevContainer
GIT_USER_NAME="Your Full Name"
GIT_USER_EMAIL="your.email@example.com"

# Optional: SSH private key for Git authentication (one line, with \n for newlines)
# SSH_PRIVATE_KEY="-----BEGIN OPENSSH PRIVATE KEY-----\nYourPrivateKeyContent\n-----END OPENSSH PRIVATE KEY-----"

# ====================================
# 🤖 AI API Keys
# ====================================
# Add your AI service API keys here
# These are used for AI development and testing

# OpenAI API (ChatGPT, GPT-4, etc.)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Anthropic API (Claude)
ANTHROPIC_API_KEY="sk-ant-api03-your-anthropic-key-here"

# Google AI API (Gemini)
GOOGLE_AI_API_KEY="AIzaSy-your-google-ai-key-here"

# ====================================
# 🔌 Ollama Configuration
# ====================================
# Ollama is expected to run on the host machine
# These settings connect the DevContainer to host Ollama
OLLAMA_HOST="http://host.docker.internal:11434"
OLLAMA_BASE_URL="http://host.docker.internal:11434"
OLLAMA_MODEL_NAME="llama2"

# ====================================
# 🗄️ Database Configuration
# ====================================
# PostgreSQL database settings (managed by docker-compose)
DATABASE_URL="postgresql://ventai_user:ventai_password@postgres:5432/ventai_db"
DB_HOST="postgres"
DB_PORT="5432"
DB_NAME="ventai_db"
DB_USER="ventai_user"
DB_PASSWORD="ventai_password"

# Redis configuration (managed by docker-compose)
REDIS_URL="redis://redis:6379/0"
REDIS_HOST="redis"
REDIS_PORT="6379"

# ====================================
# 🔐 Security Settings
# ====================================
# JWT and encryption settings
SECRET_KEY="dev-secret-key-change-in-production-very-long-and-random"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"

# ====================================
# 🌐 Application Settings
# ====================================
# Frontend configuration
REACT_APP_API_URL="http://localhost:8000"
REACT_APP_ENVIRONMENT="development"
GENERATE_SOURCEMAP="true"

# Backend configuration
ENVIRONMENT="development"
DEBUG="true"
NODE_ENV="development"

# CORS settings (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# ====================================
# 🚀 AI Development Settings
# ====================================
# Enhanced AI development configuration
AI_DEBUG_MODE="true"
AI_AGENT_LOG_LEVEL="DEBUG"
AI_PERFORMANCE_MONITORING="true"
AI_METRICS_ENABLED="true"

# ====================================
# 📋 Setup Instructions
# ====================================
# 1. Copy this file: cp .env.template .env
# 2. Fill in your actual values (especially Git and AI API keys)
# 3. Rebuild DevContainer: Ctrl+Shift+P -> "Dev Containers: Rebuild Container"
# 4. Your environment will be automatically configured!


# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Application
ENVIRONMENT=production
NODE_ENV=production
VERSION=1.0.0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# Database Configuration
DATABASE_URL=postgresql://ventai_user:secure_password@postgres:5432/ventai_prod
POSTGRES_DB=ventai_prod
POSTGRES_USER=ventai_user
POSTGRES_PASSWORD=secure_password_change_this

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password_change_this

# Frontend Configuration
REACT_APP_API_URL=https://api.ventai.app
REACT_APP_MCP_URL=https://mcp.ventai.app
REACT_APP_VERSION=${VERSION}
REACT_APP_ENVIRONMENT=production

# CORS Configuration
CORS_ORIGINS=https://ventai.app,https://www.ventai.app,https://app.ventai.app

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/ventai.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@ventai.app
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@ventai.app

# File Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Performance
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Monitoring
GRAFANA_PASSWORD=secure_grafana_password
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# SSL/TLS (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ventai-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_TIMEOUT=3600
REMEMBER_ME_DURATION=2592000

# MCP Service Configuration
MCP_PORT=8001
MCP_WORKERS=2
MCP_TIMEOUT=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Analytics (if using)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_ADVANCED_CALCULATIONS=true
ENABLE_PDF_EXPORT=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_API_DOCS=false

# Cache Configuration
CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=20

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Test Environment Configuration
# Used for automated testing and CI/CD

# Application
ENVIRONMENT=test
NODE_ENV=test
VERSION=test

# Security (test values)
SECRET_KEY=test-secret-key-not-for-production
JWT_SECRET=test-jwt-secret-key
ENCRYPTION_KEY=test-encryption-key-32-chars-long

# Test Database Configuration
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
POSTGRES_DB=test_db
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password

# Test Redis Configuration
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=""

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_MCP_URL=http://localhost:8001
REACT_APP_VERSION=test
REACT_APP_ENVIRONMENT=test

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=/tmp/ventai-test.log

# Email Configuration (mock for testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test@ventai.app
SMTP_PASSWORD=test
FROM_EMAIL=test@ventai.app

# File Storage
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,png,jpg

# Performance (reduced for testing)
WORKERS=1
WORKER_CONNECTIONS=100
KEEPALIVE_TIMEOUT=30

# Test-specific settings
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_ARGS=--verbose --tb=short
COVERAGE_THRESHOLD=80

# Rate Limiting (relaxed for testing)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Session Configuration
SESSION_TIMEOUT=300
REMEMBER_ME_DURATION=3600

# MCP Service Configuration
MCP_PORT=8001
MCP_WORKERS=1
MCP_TIMEOUT=10

# Health Check Configuration
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Feature Flags (all enabled for testing)
ENABLE_ADVANCED_CALCULATIONS=true
ENABLE_PDF_EXPORT=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_API_DOCS=true

# Cache Configuration
CACHE_TTL=60
REDIS_MAX_CONNECTIONS=5

# Mock External Services
OPENAI_API_KEY=test-openai-key
ANTHROPIC_API_KEY=test-anthropic-key

# Disable notifications in tests
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false

# Test data
TEST_USER_EMAIL=test@ventai.app
TEST_USER_PASSWORD=testpassword123
TEST_ADMIN_EMAIL=admin@ventai.app
TEST_ADMIN_PASSWORD=adminpassword123

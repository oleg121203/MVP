{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "typeRoots": ["./src/global.d.ts", "node_modules/@types"],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@reduxjs/toolkit": ["node_modules/@reduxjs/toolkit/dist/redux-toolkit.cjs.js"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
